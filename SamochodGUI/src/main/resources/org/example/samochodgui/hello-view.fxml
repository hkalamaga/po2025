<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.samochodgui.HelloController">

    <!--TOP-->
    <top>
        <VBox>
            <children>

                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu text="Plik">
                            <items>
                                <MenuItem fx:id="closeMenuItem" text="Close"/>
                            </items>
                        </Menu>
                        <Menu text="Edycja">
                            <items>
                                <MenuItem fx:id="deleteMenuItem" text="Delete"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <ToolBar fx:id="toolBar">
                    <items>
                        <ComboBox fx:id="carComboBox" prefWidth="150.0" promptText="Samochod"/>
                        <Button fx:id="addCarButton" text="Dodaj nowy" onAction="#openAddCarWindow"/>
                        <Button fx:id="deleteCarButton" text="Usun" onAction="#onUsunSamochod"/>

                    </items>
                </ToolBar>

            </children>
        </VBox>
    </top>

    <!--LEFT-->
    <left>
        <ScrollPane fx:id="leftScrollPane" fitToWidth="true" pannable="true">
            <content>

                <VBox prefWidth="250.0" spacing="10">
                    <padding>
                        <Insets top="10" left="10" right="10" bottom="10"/>
                    </padding>
                    <children>

                        <!--Samochod-->
                        <TitledPane fx:id="carTitledPane" animated="false" text="Samochod">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <children>

                                        <Label fx:id="modelLabel" text="Model" GridPane.rowIndex="0"/>
                                        <TextField fx:id="modelTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                        <Label fx:id="plateLabel" text="Nr rejestracyjny" GridPane.rowIndex="1"/>
                                        <TextField fx:id="plateTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label fx:id="weightLabel" text="Waga" GridPane.rowIndex="2"/>
                                        <TextField fx:id="weightTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                        <Label fx:id="speedLabel" text="Predkosc" GridPane.rowIndex="3"/>
                                        <TextField fx:id="speedTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                        <HBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="startButton" text="Wlacz" onAction="#onStartButton"/>
                                                <Button fx:id="stopButton" text="Wylacz" onAction="#onStopButton"/>
                                            </children>
                                        </HBox>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>


                        <!--SkrzyniaBiegow-->
                        <TitledPane fx:id="gearboxTitledPane" animated="false" text="Skrzynia Biegow">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <children>

                                        <Label fx:id="gearboxNameLabel" text="Nazwa" GridPane.rowIndex="0"/>
                                        <TextField fx:id="gearboxNameTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                        <Label fx:id="gearboxPriceLabel" text="Cena" GridPane.rowIndex="1"/>
                                        <TextField fx:id="gearboxPriceTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label fx:id="gearboxWeightLabel" text="Waga" GridPane.rowIndex="2"/>
                                        <TextField fx:id="gearboxWeightTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                        <Label fx:id="gearboxGearLabel" text="Bieg" GridPane.rowIndex="3"/>
                                        <TextField fx:id="gearboxGearTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                        <HBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="increaseGearButton" text="Zwieksz bieg" onAction="#onIncreaseGearButton"/>
                                                <Button fx:id="decreaseGearButton" text="Zmniejsz bieg" onAction="#onDecreaseGearButton"/>
                                            </children>
                                        </HBox>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!--Silnik-->
                        <TitledPane fx:id="engineTitledPane" animated="false" text="Silnik">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <children>

                                        <Label fx:id="engineNameLabel" text="Nazwa" GridPane.rowIndex="0"/>
                                        <TextField fx:id="engineNameTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                        <Label fx:id="enginePriceLabel" text="Cena" GridPane.rowIndex="1"/>
                                        <TextField fx:id="enginePriceTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label fx:id="engineWeightLabel" text="Waga" GridPane.rowIndex="2"/>
                                        <TextField fx:id="engineWeightTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                        <Label fx:id="engineRpmLabel" text="Obroty" GridPane.rowIndex="3"/>
                                        <TextField fx:id="engineRpmTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                        <HBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="increaseRpmButton" text="Dodaj gazu" onAction="#onIncreaseRpmButton"/>
                                                <Button fx:id="decreaseRpmButton" text="Ujmij gazu" onAction="#onDecreaseRpmButton"/>
                                            </children>
                                        </HBox>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!--Sprzęgło-->
                        <TitledPane fx:id="clutchTitledPane" animated="false" text="Sprzeglo">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <children>

                                        <Label fx:id="clutchNameLabel" text="Nazwa" GridPane.rowIndex="0"/>
                                        <TextField fx:id="clutchNameTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                        <Label fx:id="clutchPriceLabel" text="Cena" GridPane.rowIndex="1"/>
                                        <TextField fx:id="clutchPriceTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label fx:id="clutchWeightLabel" text="Waga" GridPane.rowIndex="2"/>
                                        <TextField fx:id="clutchWeightTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                        <Label fx:id="clutchStateLabel" text="Stan" GridPane.rowIndex="3"/>
                                        <TextField fx:id="clutchStateTextField" editable="false"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                        <HBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="pressClutchButton" text="Nacisnij" onAction="#onPressClutchButton"/>
                                                <Button fx:id="releaseClutchButton" text="Zwolnij" onAction="#onReleaseClutchButton"/>
                                            </children>
                                        </HBox>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                    </children>
                </VBox>

            </content>
        </ScrollPane>
    </left>

    <!--CENTER-->
    <center>
        <AnchorPane fx:id="mapPane" style="-fx-background-color: lightgreen;">
            <children>

                <Label fx:id="mapLabel" text="Mapa"
                       layoutX="20" layoutY="10"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <ImageView fx:id="carImageView"
                           fitHeight="100" fitWidth="100"
                           layoutX="20" layoutY="50"
                           preserveRatio="true" pickOnBounds="true">
                </ImageView>

                <Label fx:id="carLabel" text="Car"
                       layoutX="20" layoutY="160"
                       style="-fx-font-size: 14px;"/>

            </children>
        </AnchorPane>
    </center>

</BorderPane>
